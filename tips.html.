  <script>
    // ---------- Easter egg (Konami + logo taps) ----------
    (function(){
      const konami = ["ArrowUp","ArrowUp","ArrowDown","ArrowDown","ArrowLeft","ArrowRight","ArrowLeft","ArrowRight","b","a"];
      let ptr = 0;
      const egg = document.getElementById('easterEgg');
      const secretPanel = document.getElementById('secretPanel');

      // keyboard listener
      window.addEventListener('keydown', (e) => {
        const key = (e.key || "").toLowerCase();
        const expected = konami[ptr];
        // compare case-insensitively for letters
        if ((expected.length === 1 && key === expected) || (expected.length > 1 && e.key === expected)) {
          ptr++;
          if (ptr === konami.length) { revealEgg(); ptr = 0; }
        } else {
          ptr = (e.key === konami[0]) ? 1 : 0;
        }
      });

      // logo taps for mobile: 7 quick taps
      const logo = document.getElementById('siteLogo');
      let tapCount = 0, tapTimer = null;
      logo.addEventListener('click', (e) => {
        tapCount++;
        if (tapTimer) clearTimeout(tapTimer);
        tapTimer = setTimeout(()=>{ tapCount = 0; }, 900);
        if (tapCount >= 7){ revealEgg(); tapCount = 0; }
      });

      function revealEgg(){
        egg.style.display = 'block';
        egg.setAttribute('aria-hidden','false');
        // animate secretPanel too
        secretPanel.style.display = 'block';
        secretPanel.innerHTML = '<div style="text-align:center;color:#ccefff"><strong>Secret unlocked:</strong> Keep your skills sharp ‚Äî bonus mini-games unlocked in the Mini Games hub.</div>';
        // small flash animation
        egg.style.opacity = 0; egg.style.transition = 'opacity .35s ease'; requestAnimationFrame(()=>egg.style.opacity = 1);
      }
    })();

    // ---------- Save tip to localStorage ----------
    (function(){
      const STORAGE_KEY = 'gp_saved_tip_v1';
      const savedBox = document.getElementById('savedTipBox');
      const savedText = document.getElementById('savedTipText');
      const clearSavedBtn = document.getElementById('clearSaved');

      function loadSaved(){
        try {
          const id = localStorage.getItem(STORAGE_KEY);
          if (!id) { savedBox.style.display = 'none'; return; }
          const node = document.getElementById(id);
          if (!node) { localStorage.removeItem(STORAGE_KEY); savedBox.style.display = 'none'; return; }
          const title = node.querySelector('h3') ? node.querySelector('h3').innerText : 'Saved tip';
          savedText.textContent = title;
          savedBox.style.display = 'block';
        } catch(e){ console.warn('loadSaved error', e); savedBox.style.display = 'none'; }
      }

      loadSaved();
      document.querySelectorAll('.save-btn').forEach(btn=>{
        btn.addEventListener('click', (ev)=>{
          const id = btn.dataset.tipid;
          if (!id) return;
          localStorage.setItem(STORAGE_KEY, id);
          loadSaved();
          btn.innerText = 'Saved ‚úì';
          setTimeout(()=>btn.innerText = 'Save this tip', 1200);
        });
      });

      clearSavedBtn && clearSavedBtn.addEventListener('click', ()=>{
        localStorage.removeItem(STORAGE_KEY);
        loadSaved();
      });
    })();

    // ---------- Simple sanity checks (avoid missing elements) ----------
    (function(){
      // check required elements exist
      const required = ['easterEgg','siteLogo','savedTipBox'];
      required.forEach(id=>{
        if (!document.getElementById(id) && id !== 'easterEgg'){
          console.warn('Missing element:', id);
        }
      });
    })();
  </script>
